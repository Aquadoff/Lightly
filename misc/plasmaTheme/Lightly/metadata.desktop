[Desktop Entry]
Name=Lightly
Comment=The only Light theme I want

X-KDE-PluginInfo-Author=xuzhao9
X-KDE-PluginInfo-Category=Plasma Theme
X-KDE-PluginInfo-Email=i@xuzhao.net
X-KDE-PluginInfo-EnabledByDefault=true
X-KDE-PluginInfo-License=GPLv3

# The X-KDE-PluginInfo-Name entry should match the name of the sub-folder in share/plasma/desktoptheme where the SVG files for this theme exist. 
X-KDE-PluginInfo-Name=Lightly

# If you do changes to SVG files in your theme, make sure to update the version number X-KDE-PluginInfo-Version so Plasma can properly refresh its cache.
X-KDE-PluginInfo-Version=1.0
X-KDE-PluginInfo-Website=https://github.com/xuzhao9
X-Plasma-API=5.0

# If the theme should inherit from another theme than the "default" one
# [Settings]
# FallbackTheme=oxygen

# Adding some contrast to what is behind windows, panels or tooltips (disabled by default)
[ContrastEffect]
contrast=1.2
enabled=true
intensity=1
saturation=1

# Blurring what is behind windows, panels or tool tips. This is enabled by default.
[BlurBehindEffect]
enabled=true

[AdaptiveTransparency]
enabled=true
